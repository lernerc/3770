#ifndef GAUGE_H
#define GAUGE_H

#include <QWidget>

class Gauge : public QWidget {

  Q_OBJECT
  
public: 

  Gauge(QWidget *parent = 0);
  void setRange(int l, int h);

public slots:

  void setValue(int val);
  
protected:

  void paintEvent(QPaintEvent *event);
  
private:

  int low, high;
  int value;

};

#endif
